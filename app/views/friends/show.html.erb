<div class="d-flex justify-content-center my-4">
  <ul class="list-group list-group-flush align-middle">
    <li class="list-group-item darkcolor"><%= @friend.first_name %></li>
    <li class="list-group-item darkcolor"><%= @friend.last_name %></li>
    <li class="list-group-item darkcolor"><%= @friend.email %></li>
    <li class="list-group-item darkcolor"><%= @friend.phone %></li>
    <li class="list-group-item darkcolor"><%= @friend.twitter %></li>
  </ul>
</div>
<div class="d-flex justify-content-center my-3">
  <%= link_to 'Edit', edit_friend_path(@friend),  class:"btn btn-dark btn-lg col-md-1 rounded-0" %> 
  <%= link_to 'Back', friends_path,  class:"btn btn-dark btn-lg col-md-1 rounded-0" %>
</div>
